	number = {1},
	urldate = {2023-11-28},
	journal = {Landscape and Ecological Engineering},
	author = {Mao, QiaoZhi and Watanabe, Makoto and Makoto, Kobayashi and Kita, Kazuhito and Koike, Takayoshi},
