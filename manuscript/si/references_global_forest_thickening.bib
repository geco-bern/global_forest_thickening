	author = {Walker, Anthony P. and Quaife, Tristan and van Bodegom, Peter M. and De Kauwe, Martin G. and Keenan, Trevor F. and Joiner, Joanna and Lomas, Mark R. and MacBean, Natasha and Xu, Chongang and Yang, Xiaojuan and Woodward, F. Ian},
