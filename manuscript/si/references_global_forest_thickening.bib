	number = {6},
	urldate = {2022-12-19},
	journal = {Functional Plant Biology},
	author = {McMurtrie, Ross E. and Norby, Richard J. and Medlyn, Belinda E. and Dewar, Roderick C. and Pepper, David A. and Reich, Peter B. and Barton, Craig V. M.},
