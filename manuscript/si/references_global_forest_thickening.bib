	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/j.1365-2486.2009.02058.x},
	keywords = {photosynthesis, grassland, acclimation, FACE, N-fertilisation, Nitrogen, C3 grass species, carboxylation rate, free-air CO2, species functional groups},
