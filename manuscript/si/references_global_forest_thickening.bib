	number = {6},
	urldate = {2023-11-28},
	journal = {Global Change Biology},
	author = {Liang, Xingyun and Zhang, Tong and Lu, Xiankai and Ellsworth, David S. and BassiriRad, Hormoz and You, Chengming and Wang, Dong and He, Pengcheng and Deng, Qi and Liu, Hui and Mo, Jiangming and Ye, Qing},
	year = {2020},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/gcb.15071},
	keywords = {photosynthesis, plant functional traits, leaf area, N deposition, N addition, plant carbon gain, plant water use},
	pages = {3585--3600},
}

