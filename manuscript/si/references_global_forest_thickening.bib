	number = {6},
	urldate = {2023-11-28},
	journal = {Journal of Forestry Research},
	author = {Jing, Yanli and Guan, Dexin and Wu, Jiabing and Wang, Anzhi and Jin, Changjie and Yuan, Fenghui},
