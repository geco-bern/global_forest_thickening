	number = {8},
	urldate = {2024-03-11},
	journal = {Ecology Letters},
	author = {Sulman, Benjamin N. and Brzostek, Edward R. and Medici, Chiara and Shevliakova, Elena and Menge, Duncan N. L. and Phillips, Richard P.},
	year = {2017},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/ele.12802},
	keywords = {Biogeochemical model, biogeochemistry, carbon cycling, forest productivity, mycorrhizae, N-cycle feedbacks, plant-soil interactions, soil carbon, DGVM, SOM, AM, ECM},
	pages = {1043--1053},
}

@article{tamme_global_2021,
