	journal = {Climatic Change},
	author = {Tian, Hanqin and Chen, Guangsheng and Lu, Chaoqun and Xu, Xiaofeng and Hayes, Daniel J. and Ren, Wei and Pan, Shufen and Huntzinger, Deborah N. and Wofsy, Steven C.},
	month = apr,
