	number = {4},
	urldate = {2024-03-11},
	journal = {New Phytologist},
	author = {Eastman, Brooke A. and Adams, Mary B. and Brzostek, Edward R. and Burnham, Mark B. and Carrara, Joseph E. and Kelly, Charlene and McNeil, Brenden E. and Walter, Christopher A. and Peterjohn, William T.},
	year = {2021},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/nph.17256},
	keywords = {carbon cycling, N-fertilisation, experimental N addition, N acquisition strategies, optimal allocation theory, plant biomass allocation, temperate forest, terrestrial carbon sink, catchment, leaching},
	pages = {1435--1448},
}

@article{sulman_feedbacks_2017,
	title = {Feedbacks between plant {N} demand and rhizosphere priming depend on type of mycorrhizal association},
