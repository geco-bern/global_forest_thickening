	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/nph.16447},
	keywords = {photosynthesis, temperature, optimality, plant functional traits, primary production, acclimation, adaptation, elevation transect},
	pages = {1274--1284},
}

