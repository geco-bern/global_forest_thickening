}

@article{kopper_and_lindroth_2003,
  title = {Responses of Trembling Aspen ({{Populus}} Tremuloides) Phytochemistry and Aspen Blotch Leafminer ({{Phyllonorycter}} Tremuloidiella) Performance to Elevated Levels of Atmospheric {{CO2}} and {{O3}}},
  author = {Kopper, Brian J. and Lindroth, Richard L.},
