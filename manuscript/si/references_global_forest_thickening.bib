	keywords = {gross primary production (GPP), GPP, plant functional traits, Vcmax, leaf nitrogen, traits, assumption-centred modelling, co-ordination hypothesis, Dynamic Global Vegetation Model (DGVM), modelling photosynthesis, terrestrial carbon cycle, trait-based modelling},
